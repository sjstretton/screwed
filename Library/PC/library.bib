@article{EqualityTrust2014,
abstract = {Previous studies addressing the association between income inequality and participation suggest that in societies in which there is high income inequality, participation is low. This has been attributed to two different theories. The 'sociological' theory proposes that in more unequal societies the poor abstain from participation, show lower levels of generalised trust and develop bad health because they are more distressed by their disadvantaged position than they would have been if society had been more egalitarian. The 'neoliberal' theory, by contrast, attributes the lower levels of participation in more unequal societies to the resources people have available to them at both the individual and the collective level. At the individual level this manifests as income and education, while at the collective level this includes GDP and the extent to which the state provides welfare to its citizens. New income inequality research from the University of Amsterdam empirically disentangles the two theoretical explanations, examining how inequality in various parts of the income distribution is related to civic, cultural and social participation. A substantial part of the impact of inequality is found to manifest itself through resources at the individual and collective level. However, the researchers also found that, independent of resources, higher inequality magnifies the relationship between income and participation. This supports research which cites inter-individual processes as the principle explanation of the association between high inequality and low participation.},
author = {{The Equality Trust}},
file = {::},
journal = {The Equality Trust Research Update},
title = {{Income Inequality and Participation}},
